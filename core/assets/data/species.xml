<?xml version="1.0"?>

<!--xml file for species based information-->
<settings>
    <species name="zebra">
        <number>20</number> <!-- the quantity of this species you want. -->
        <byte>0</byte>  <!-- this is the sub-type -->

        <spritergb r = "0" g="0" b="0.6"/> <!-- the colour of the sprite -->
        <diet>herbivore</diet> <!-- carnivore or herbivore -->

        <sightRadius>180f</sightRadius> <!-- the distance they can see -->
        <flockRadius>120f</flockRadius> <!-- the distance they will try and flock within -->
        <nearRadius>40f</nearRadius> <!-- the distance within which they will try to avoid others-->
        <maxSpeed>1.5f</maxSpeed> <!-- max speed per tick -->
        <maxForce>0.04f</maxForce> <!-- max force applied per turn.-->

        <stamina>50f</stamina> <!-- this is the sub-type -->
        <lifespan>80f</lifespan> <!-- average lifespan of species-->
        <maturity>10</maturity> <!-- the age at which they are considered adult -->

        <newbornSize>8</newbornSize> <!-- the size of a new born-->
        <maxSize>28</maxSize> <!-- average max size of an adult -->

        <cohesion>0.5f</cohesion> <!-- weighting of cohesion behaviour -->
        <separation>0.5f</separation> <!-- weighting of seperation behaviour -->
        <alignment>0.5f</alignment> <!-- weighting of alignment behaviour -->
        <wander>0.1f</wander> <!-- weighting of wander behaviour-->

        <panicLevel>40</panicLevel>
        <hungerLevel>65</hungerLevel>
        <thirstLevel>20</thirstLevel>
    </species>

    <species name="wildebeest">
        <number>20</number>
        <byte>1</byte>  <!-- this is the sub-type -->

        <spritergb r = "0.6" g="0" b="0"/>
        <diet>herbivore</diet>
        <sightRadius>180f</sightRadius>
        <flockRadius>120f</flockRadius>
        <nearRadius>40f</nearRadius>
        <maxSpeed>2f</maxSpeed>
        <maxForce>0.04f</maxForce>

        <stamina>20f</stamina>
        <lifespan>90f</lifespan>
        <maturity>15</maturity>

        <newbornSize>10</newbornSize>
        <maxSize>35</maxSize>

        <cohesion>0.5f</cohesion>
        <separation>0.5f</separation>
        <alignment>0.5f</alignment>
        <wander>0.1f</wander>

        <panicLevel>50</panicLevel>
        <hungerLevel>65</hungerLevel>
        <thirstLevel>60</thirstLevel>
    </species>

    <species name="gazelle">
        <number>20</number>
        <byte>2</byte>  <!-- this is the sub-type -->
        <spritergb r = "0" g="0.6" b="0"/>

        <diet>herbivore</diet>
        <sightRadius>250f</sightRadius>
        <flockRadius>80f</flockRadius>
        <nearRadius>10</nearRadius>
        <maxSpeed>3.4f</maxSpeed>
        <maxForce>0.15f</maxForce>

        <stamina>60f</stamina>
        <lifespan>50</lifespan>
        <maturity>5</maturity>

        <newbornSize>5</newbornSize>
        <maxSize>10</maxSize>

        <cohesion>0.5f</cohesion>
        <separation>0.6f</separation>
        <alignment>0.5f</alignment>
        <wander>0.1f</wander>

        <panicLevel>30</panicLevel>
        <hungerLevel>55</hungerLevel>
        <thirstLevel>30</thirstLevel>
    </species>

<!-- Carnivores -->
